#ifndef PWM_H_
#define PWM_H_

#include "TM4C123GH6PM.h"

/**
 * @brief Initialize clock for PWM module
 * 
 * @param pwmModule: 0 for PWM0, 1 for PWM1
 * 
 * @return none
 **/
void pwmClockEnable(uint8_t pwmModule);

/**
 * @brief Initialize clock for GPIO port
 * 
 * @param port GPIO ports, from 0 to 5 (PORTA to PORTF)
 * 
 * @return none
 **/
void gpioClockEnable(uint8_t port);

/**
 * @brief disable clock for GPIO port
 * 
 * @param port GPIO ports, from 0 to 5 (PORTA to PORTF)
 * 
 * @return none
 */
void gpioClockDisable(uint8_t port);

/**
 * @brief enable clock divisor for the PWM clock
 * 
 * @return none
 * 
 */
void pwmClockDivisorEnable();

/**
 * @brief disable clock divisor for the PWM clock, use system clock
 * 
 * @return none
 * 
 */
void pwmClockDivisorDisable();

/**
 * @brief configure clock divisor for the PWM clock
 * 
 * @param divisor: 0 for system clock, 1 for system clock/2, 2 for system clock/4, 3 for system clock/8, 4 for system clock/16, 5 for system clock/32, 6 for system clock/64
 * 
 * @return none
 * 
 */
void pwmClockDivisorConfig(uint8_t divisor);

/**
 * @brief config alternate pin function
 * 
 * @param port GPIOA to GPIOF
 * @param pin 0 to 7
 * @param alternateFunction 0 to 15, page 1351 of datasheet
 * 
 * @return none
 */
void alternatePinConfig(GPIOA_Type *port, uint8_t pin, uint8_t alternateFunction);

void pwmConfig(PWM0_Type pwmModule, uint8_t generator, uint8_t countMode, uint16_t loadValue){  




#endif /* PWM_H_ */
